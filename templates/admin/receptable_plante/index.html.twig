{% extends 'base.html.twig' %}

{% block title %}La liste des receptables de plante{% endblock %}

{% block body %}



    <h1 class="title_koinbio">La liste des pots de plante</h1>

    <button type="button" class="btn btn-success btn-xs "><a href="{{ path('admin_receptable_add') }}">Ajouter un receptable </a></button>
    <br><br>
    <table class="table">

        <tr>
            <th>id</th>
            <th>nom</th>
            <th>couleur </th>
            <th>Mati√®re</th>
            <th>forme</th>
            <th>Voir</th>
            <th>Editer</th>
            <th>Supprimer</th>
        </tr>

        {% for receptable in receptables %}
            <tr>
                <td>{{ receptable.id }}</td>
                <td>{{ receptable.name }}</td>
                <td>{{ receptable.color }}</td>
                <td>{{ receptable.matiere}}</td>
                <td>{{ receptable.forme }}</td>
                <td><p><a href="{{ path('admin_receptable_show', {'id':receptable.id}) }}"><i class="fa fa-eye  color-marron-koin" aria-hidden="true"></i></a></p></td>
                <td> <p>   <a href="{{ path('admin_receptable_edit', {'id':receptable.id}) }}"><i class="fa fa-pencil-square  color-marron-koin" aria-hidden="true"></i></a></p></td>
                <td><p><a onclick="return confirm('Etes vous supprimer cette receptable?');" href="{{ path('admin_receptable_delete', {'id':receptable.id}) }}"><i class="fa  fa-trash  color-marron-koin" aria-hidden="true"></i></a></p></td>
            </tr>



        {% endfor %}

    </table>


{% endblock %}
