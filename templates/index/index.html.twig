{% block title %}Koinbio{% endblock %}

{% block body %}


<div class="container">


    {# ICI LE SLIDER GALLERIE DE LA PAGE D ACCUEIL #}
    {% include 'blocks/sliderGallery.html.twig' %}



    <div class="sect_koinbio one"></div>
    <div class="sect_koinbio two">
        <div class="wrap_two">
            <div class="two_sec">
                <div class="wrap_two_img">
                    <img src="{{ asset('build/images/fiche_identite.png') }}" alt="">
                </div>
                <p>Créer des fiches de vos plantes</p>
            </div>
            <div class="two_sec">
                <div class="wrap_two_img">
                    <img src="{{ asset('build/images/carte_identite.png') }}" alt="">
                </div>
                <p>Télécharger la carte d'identité fictif de votre plante</p>
            </div>
            <div class="two_sec">
                <div class="wrap_two_img">
                    <img src="{{ asset('build/images/partager_fiche.png') }}" alt="">
